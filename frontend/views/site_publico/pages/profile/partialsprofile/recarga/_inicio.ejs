<script>
  const form = new Inputs("form")
  form.forms.addEventListener("submit", async (e) => {
    e.preventDefault()

    try {
      const {
        valor
      } = form.allValues()



      const {
        id
      } = (await axios.get("http://localhost:9000/api/user/infos/?id", getCookie())).data

      const response = await axios.patch(`http://localhost:9000/api/adm/passageiros/recarga/${id}/${valor}`)

      console.log(response);

      localStorage.setItem("alert", JSON.stringify({
        cor: "success",
        texto: ` vc recarregou a sua conta no valor de R$ ${ parseFloat(valor).toFixed(2).replace(".", ",") }. Seu saldo agora Ã© de R$${ parseFloat(response.data.saldo).toFixed(2).replace(".", ",") }  `,
        div: "#alert",
      }))

      location.reload()

    } catch (error) {
      console.error(error);

    }


  })

  AlternarDePag("btnPaia2", "recarga", "recarga2")
</script>