<div id="alert">
  <script>
    alert("alert", 5000)
  </script>
</div>

<section class="my-profile row">
  <div class="col-md-6">
    <ul class="list-group">
      <li class="list-group-item active">
        Informações Pessoais
        <a id="btnEdit" class="btn btn-primary float-end">Editar</a>
      </li>
      <li class="list-group-item">
        <span class="fw-bold">Nome:</span>
        <span> <%= nome %> </span>
      </li>
      <li class="list-group-item">
        <span class="fw-bold">Apelido:</span>
        <span><%= username %></span>
      </li>
      <li class="list-group-item">
        <span class="fw-bold">CPF:</span>
        <span><%= cpf %></span>
      </li>
      <li class="list-group-item">
        <span class="fw-bold">Data de Nascimento:</span>
        <span>
          <%=  new Date(nascimento).toLocaleDateString() %></span>
      </li>
      <li class="list-group-item">
        <span class="fw-bold">Email:</span>
        <span> <%= email %> </span>
      </li>
    </ul>
    <ul class="list-group mt-4">
      <li class="list-group-item active">
        Saldo
      </li>
      <li class="list-group-item">
        <span class="fw-bold">Disponivel:</span>
        <span class="fw-bold text-primary">
          R$ <%- parseFloat(saldo).toLocaleString() %>
        </span>
      </li>
    </ul>
  </div>
  <div class="col-md-6">
    <ul class="list-group">
      <li class="list-group-item active">
        Cartão de Crédito
        <a href="#" class="btn btn-primary float-end">Detalhes</a>
      </li>
      <li class="list-group-item">
        <span class="fw-bold">Bandeira:</span>
        <span>
          {{ cartaondeira }}</span>
      </li>
      <li class="list-group-item">
        <span class="fw-bold">Número:</span>
        <span>
          {{ cartaomero }}</span>
      </li>
      <li class="list-group-item">
        <span class="fw-bold">Limite:</span>
        <span>
          {{ cartaomite }}</span>
      </li>
    </ul>

  </div>
</section>

<script>
  AlternarDePag("btnEdit", "perfil", "atualizar")
</script>