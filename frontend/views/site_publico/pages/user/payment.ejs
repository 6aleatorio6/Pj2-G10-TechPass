
<%const pagComBtns = (pag, btns) => {%>
    <!-- bem, poderemos chamar isso de 'A grande gambiarra' -->

    
    
    <%let pags = `
        <script>
            ${include(`partialsUser/payment/_${pag}.ejs`)}`%>
            
            <%
                btns.map((elem) =>{ 
                    pags += `
                    document.querySelector("#info").querySelector(\`#${elem[0]}\`).addEventListener("click", () => {
                        document.querySelector("#info").innerHTML = \`${include('partialsUser/payment/_'+elem[1]+'.ejs')}\`)%>` 
                    })
                    `    
                })
             %>
            
        <%return pags += `</script>`%>
<%}%>


<%
    pagComBtns('iniciopag', [
        ["btn-addpagamento", "addtipocard"],
    ]) 
    pagComBtns('addtipocard', [
        ["btncredito", "formscardcredito"],
    ]) 
%>

 

