<script>
  document.addEventListener("DOMContentLoaded", () => {

    const modalsBoostrap = []
    let ultimoFechado
    document.querySelectorAll(".modalForm").forEach((elem, indice) => {
      modalsBoostrap.push(new bootstrap.Modal(elem))



      if (elem.classList.contains("inicio")) {
        ultimoFechado = indice
      }

      elem.addEventListener("hidden.bs.modal", (evt) => {
        console.log(elem)
      })
    })


    document.querySelector("#abrirCadastroDelinhas").addEventListener("click", () => {
      modalsBoostrap[ultimoFechado].show()
    })
  })
</script>
